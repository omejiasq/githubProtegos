<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIMA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Card.Main" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Text.Big" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
<!--        <item name="android:fontFamily">@font/livvic_regular</item>--> TODO: PUT A FONT FAMILY
    </style>

    <style name="Text.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Medium.Italic" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Medium.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.Small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.VerySmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text.VerySmall.Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title" parent="Widget.MaterialComponents.TextView">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Title.Bold" parent="Widget.MaterialComponents.TextView">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle.Italic" parent="Widget.MaterialComponents.TextView">

        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Subtitle.Bold" parent="Widget.MaterialComponents.TextView">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Subtitle" parent="Widget.MaterialComponents.TextView">

        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CardView.Collapsed" parent="CardView">
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="color">?attr/colorPrimary</item>
    </style>

    <style name="Input.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/icon_error</item>
    </style>

    <style name="Input.Outlined.Required" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">?attr/colorPrimary</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="helperText">@string/placeholder_required_hint</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/icon_error</item>
    </style>

    <style name="Input.Outlined.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="helperTextTextColor">?attr/colorPrimary</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/icon_error</item>
    </style>

    <style name="Input.Outlined.Dropdown.Required" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="helperTextTextColor">?attr/colorPrimary</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="helperText">@string/placeholder_required_hint</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/icon_error</item>
    </style>

</resources>