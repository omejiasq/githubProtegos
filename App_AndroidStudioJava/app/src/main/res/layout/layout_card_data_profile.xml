<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        style="@style/Card.Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_cards_1">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_launcher_foreground"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp" />

            </FrameLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/Text.Title.Bold"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_alignTop="@id/frame"
                android:layout_toEndOf="@id/frame"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/test_title"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/Text.Subtitle"
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignStart="@id/tv_title"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:text="@string/test_subtitle"/>

            <View
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/icon_edit"
                android:backgroundTint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/Text.Subtitle"
                android:id="@+id/optionDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:text="@string/test_subtitle"/>

            <com.google.android.material.textview.MaterialTextView
                style="@style/Text.Subtitle"
                android:id="@+id/optionDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/optionDescription2"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/test_subtitle"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>