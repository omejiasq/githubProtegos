<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vBatteryLevel"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/icon_battery_full"
        android:backgroundTint="@color/design_default_color_primary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeadsetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/vBatteryLevel"
        android:layout_alignTop="@id/vBatteryLevel"
        android:layout_alignBottom="@id/vBatteryLevel"
        android:layout_toStartOf="@id/tvHeadsetLevel"
        android:text="@string/battery_headset"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeadsetLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tvHeadsetTitle"
        android:layout_alignBottom="@id/tvHeadsetTitle"

        android:text="@string/test_battery_percentage"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"/>

</RelativeLayout>